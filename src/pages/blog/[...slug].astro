---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import CTAWhatsApp from "../../components/CTAWhatsApp.astro";
import BlogSEO from "../../components/BlogSEO.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import "../../styles/global.css";

export async function getStaticPaths() {
    const blogEntries = await getCollection("blog");
    return blogEntries.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();
const { title, description, pubDate, image, tags } = entry.data;

// Get related posts (same tags, excluding current)
const allPosts = await getCollection("blog");
const relatedPosts = allPosts
    .filter(
        (p) =>
            p.slug !== entry.slug && p.data.tags.some((t) => tags.includes(t)),
    )
    .slice(0, 3);

const breadcrumbItems = [{ label: "Blog", href: "/blog/" }, { label: title }];

const formattedDate = new Date(pubDate).toLocaleDateString("es-PE", {
    year: "numeric",
    month: "long",
    day: "numeric",
});
---

<Layout title={`${title} | Blog CONKRET`} description={description}>
    <BlogSEO
        title={title}
        description={description}
        pubDate={pubDate}
        image={image}
        slug={entry.slug}
        tags={tags}
    />

    <Header />

    <main class="post-page">
        <header class="post-header">
            <div class="post-hero-image mt-8 mb-8">
                <div class="container hero-container">
                    <div class="hero-carousel">
                        <img
                            src="https://res.cloudinary.com/dskliu1ig/image/upload/v1769563933/conkret-peru-concreto-listo_dwaisx.webp"
                            alt={title}
                            class="hero-img active"
                        />
                        <!-- Placeholder Image 1 - Replace URL later -->
                        <img
                            src="https://images.unsplash.com/photo-1541888946425-d81bb19240f5?auto=format&fit=crop&q=80&w=1920"
                            alt="Construction Site"
                            class="hero-img"
                        />
                        <!-- Placeholder Image 2 - Replace URL later -->
                        <img
                            src="https://images.unsplash.com/photo-1518391846015-5560b8aaa4a0?auto=format&fit=crop&q=80&w=1920"
                            alt="Concrete Work"
                            class="hero-img"
                        />
                    </div>
                    <div class="hero-overlay">
                        <div class="container-small">
                            <h1 class="hero-title">{title}</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-small">
                <Breadcrumbs items={breadcrumbItems} />
            </div>
        </header>

        <div class="container-article py-12">
            <div class="article-layout">
                <article class="article-content prose">
                    <Content />

                    <div class="post-footer-cta mt-12">
                        <div class="cta-banner">
                            <h3>¡Construye con los expertos!</h3>
                            <p>
                                Solicita hoy mismo tu cotización de concreto
                                premezclado o mortero listo para tu obra en
                                Lima.
                            </p>
                            <a
                                href="https://wa.me/51972047903?text=Hola,%20vengo%20del%20blog%20y%20quiero%20cotizar"
                                class="btn-primary"
                                target="_blank"
                                rel="noopener noreferrer"
                                >Cotizar por WhatsApp</a
                            >
                        </div>
                    </div>
                </article>
            </div>
        </div>

        {
            relatedPosts.length > 0 && (
                <section class="related-posts bg-slate-50 py-32 border-t border-slate-100">
                    <div class="container">
                        <div class="text-center mb-20">
                            <span class="text-primary font-black uppercase tracking-[0.2em] text-sm block mb-4">
                                Sigue leyendo
                            </span>
                            <h2 class="text-4xl md:text-5xl font-black text-slate-900 italic uppercase tracking-tighter">
                                Artículos{" "}
                                <span class="text-primary">Relacionados</span>
                            </h2>
                        </div>
                        <div class="related-grid">
                            {relatedPosts.map((post) => (
                                <a
                                    href={`/blog/${post.slug}/`}
                                    class="related-card group"
                                >
                                    <div class="card-image-wrapper">
                                        <img
                                            src={post.data.image}
                                            alt={post.data.title}
                                            class="related-post-img"
                                        />
                                        <div class="card-overlay" />
                                    </div>
                                    <div class="card-body">
                                        <div class="flex gap-2 mb-4">
                                            {post.data.tags
                                                .slice(0, 2)
                                                .map((tag) => (
                                                    <span class="text-[10px] font-black uppercase tracking-wider bg-slate-100 text-slate-500 px-2 py-1 rounded">
                                                        {tag}
                                                    </span>
                                                ))}
                                        </div>
                                        <h3 class="text-xl font-black text-slate-900 group-hover:text-primary transition-colors leading-tight mb-6">
                                            {post.data.title}
                                        </h3>
                                        <span class="text-sm font-bold uppercase tracking-widest text-primary flex items-center gap-2">
                                            Leer más
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="16"
                                                height="16"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="3"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                class="transition-transform group-hover:translate-x-2"
                                            >
                                                <line
                                                    x1="5"
                                                    y1="12"
                                                    x2="19"
                                                    y2="12"
                                                />
                                                <polyline points="12 5 19 12 12 19" />
                                            </svg>
                                        </span>
                                    </div>
                                </a>
                            ))}
                        </div>
                    </div>
                </section>
            )
        }
    </main>

    <Footer />
    <CTAWhatsApp />
</Layout>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const images = document.querySelectorAll(".hero-carousel .hero-img");
        if (images.length > 1) {
            let currentIndex = 0;

            setInterval(() => {
                // Remove active class from current
                images[currentIndex].classList.remove("active");

                // Calculate next index
                currentIndex = (currentIndex + 1) % images.length;

                // Add active class to next
                images[currentIndex].classList.add("active");
            }, 3000); // 3 seconds
        }
    });
</script>

<style>
    .post-page {
        background: #fff;
    }
    .container-small {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }
    .container-article {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .post-header {
        /* padding-top: 3rem; removed to reduce gap */
        background: #fcfcfc;
        border-bottom: 1px solid #eee;
        padding-bottom: 2rem; /* Ensure some spacing at the bottom if needed */
    }
    .post-header h1 {
        font-size: 3rem;
        font-weight: 800;
        line-height: 1.1;
        margin: 1.5rem 0;
        color: #111;
    }

    .post-meta {
        display: flex;
        align-items: center;
        color: #666;
        font-size: 0.95rem;
    }
    .dot {
        width: 4px;
        height: 4px;
        background: #ccc;
        border-radius: 50%;
        margin: 0 0.8rem;
    }

    .post-tags {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }
    .tag {
        color: var(--color-primary);
        font-weight: 600;
        font-size: 0.85rem;
    }

    .hero-container {
        position: relative;
        overflow: hidden;
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        padding: 0 !important;
        max-width: 1400px !important;
        width: 100%;
        margin: 0 auto;
        height: 500px; /* Fixed height for carousel */
    }

    .hero-carousel {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    .hero-carousel .hero-img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0;
        transition: opacity 1s ease-in-out;
    }

    .hero-carousel .hero-img.active {
        opacity: 1;
    }

    .hero-overlay {
        z-index: 2; /* Ensure overlay is above carousel */
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 0.2) 0%,
            rgba(0, 0, 0, 0.7) 100%
        );
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }
    .hero-title {
        color: white !important;
        font-size: 3.5rem !important;
        font-weight: 900 !important;
        text-shadow: 0 4px 12px rgba(0, 0, 0, 0.6) !important;
        margin: 0 !important;
        line-height: 1.1 !important;
    }

    @media (max-width: 992px) {
        .hero-title {
            font-size: 26px !important;
        }
    }

    .article-layout {
        max-width: 900px;
        margin: 0 auto;
    }

    .btn-whatsapp {
        display: block;
        background: #25d366;
        color: white;
        text-align: center;
        padding: 0.75rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: bold;
        transition: transform 0.2s;
    }
    .btn-whatsapp:hover {
        transform: scale(1.03);
    }

    /* Typography / Prose */
    .article-content {
        font-size: 1.2rem;
        line-height: 1.8;
        color: #333;
    }
    .prose :global(h2) {
        font-size: 2rem;
        margin-top: 3rem;
        margin-bottom: 1.5rem;
        color: #111;
    }
    .prose :global(h3) {
        font-size: 1.5rem;
        margin-top: 2rem;
    }
    .prose :global(p) {
        margin-bottom: 1.5rem;
    }
    .prose :global(ul) {
        margin-bottom: 2rem;
        padding-left: 1.5rem;
    }
    .prose :global(li) {
        margin-bottom: 0.5rem;
    }
    .prose :global(strong) {
        color: #000;
        font-weight: 700;
    }
    .prose :global(table) {
        width: 100%;
        border-collapse: collapse;
        margin: 2rem 0;
        font-size: 1rem;
    }
    .prose :global(th),
    .prose :global(td) {
        padding: 1rem;
        border: 1px solid #eee;
        text-align: left;
    }
    .prose :global(th) {
        background: #f9f9f9;
        font-weight: bold;
    }

    .cta-banner {
        background: #1a1a1a;
        color: white;
        padding: 3rem;
        border-radius: 16px;
        text-align: center;
    }
    .cta-banner h3 {
        font-size: 1.8rem;
        margin-bottom: 1rem;
    }
    .cta-banner p {
        color: #ccc;
        margin-bottom: 2rem;
    }

    .related-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2.5rem;
    }

    .related-card {
        background: white;
        border-radius: 2rem;
        overflow: hidden;
        text-decoration: none;
        display: flex;
        flex-direction: column;
        height: 100%;
        transition: all 0.5s cubic-bezier(0.165, 0.84, 0.44, 1);
        border: 1px solid #f1f5f9;
    }

    .related-card:hover {
        transform: translateY(-12px);
        box-shadow: 0 40px 80px -20px rgba(0, 0, 0, 0.1);
        border-color: #fee2e2;
    }

    .card-image-wrapper {
        position: relative;
        aspect-ratio: 16/10;
        overflow: hidden;
    }

    .related-post-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.8s cubic-bezier(0.165, 0.84, 0.44, 1);
    }

    .related-card:hover .related-post-img {
        transform: scale(1.1);
    }

    .card-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            to top,
            rgba(0, 0, 0, 0.3) 0%,
            transparent 50%
        );
        opacity: 0;
        transition: opacity 0.5s;
    }

    .related-card:hover .card-overlay {
        opacity: 1;
    }

    .card-body {
        padding: 2.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    @media (max-width: 992px) {
        .article-layout {
            grid-template-columns: 1fr;
        }
        .article-sidebar {
            display: none;
        }
        .post-header h1 {
            font-size: 2.2rem;
        }
        .related-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
    }
</style>
