---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import CTAWhatsApp from "../../components/CTAWhatsApp.astro";
import ProductCard from "../../components/ProductCard.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import "../../styles/global.css";

const mortarProducts = [
    {
        title: "Mortero Fino",
        description:
            "Mezcla seca de granulometría fina ideal para acabados y cielos rasos.",
        image: "https://res.cloudinary.com/dskliu1ig/image/upload/v1769562141/1-4-mortero-grueso_odjo1y.webp",
        link: "/mortero/mortero-fino/",
    },
    {
        title: "Mortero Grueso",
        description:
            "Solución industrial para tarrajeos primarios y nivelación de superficies.",
        image: "https://res.cloudinary.com/dskliu1ig/image/upload/v1769562141/1-4-mortero-grueso_odjo1y.webp",
        link: "/mortero/mortero-grueso/",
    },
    {
        title: "Mezcla para Tarrajeo",
        description:
            "Dosificación hidrófuga lista para aplicar en muros exteriores e interiores.",
        image: "https://res.cloudinary.com/dskliu1ig/image/upload/v1769562141/1-4-mortero-grueso_odjo1y.webp",
        link: "/mortero/tarrajeo/",
    },
];

const specs = [
    {
        title: "Cero Desperdicio",
        desc: "Dosificación exacta que elimina las sobras de arena y cemento en el piso de la obra.",
    },
    {
        title: "Limpieza Total",
        desc: "Reduce el polvo y mantiene el orden en el área de trabajo, ideal para remodelaciones.",
    },
    {
        title: "Rapidez de Avance",
        desc: "Ahorre hasta un 40% en tiempo de preparación. Solo agregue agua y aplique.",
    },
];

const breadcrumbItems = [
    { label: "Productos", href: "/productos/" },
    { label: "Morteros" },
];
---

<Layout
    title="Morteros y Mezclas Secas Premium | CONKRET"
    description="Línea premium de morteros embolsados para tarrajeo y asentado. Calidad industrial, cero desperdicio y mayor rapidez en su obra."
>
    <Header />

    <main>
        <!-- Category Hero -->
        <section class="category-hero">
            <div class="container relative z-10">
                <div class="max-w-4xl">
                    <Breadcrumbs items={breadcrumbItems} />
                    <h1 class="hero-title mt-6">
                        Morteros y <span
                            class="text-primary"
                            style="color: #e40323 !important;"
                            >Mezclas Secas</span
                        >
                    </h1>
                    <p class="hero-desc">
                        La solución industrial para tarrajeo y asentado.
                        Garantice acabados uniformes y elimine el desperdicio de
                        materiales en su proyecto.
                    </p>
                    <div class="flex gap-4 mt-8 flex-wrap">
                        <a href="#catalogo" class="btn-primary">Ver Productos</a
                        >
                        <a href="#fichas" class="btn-outline">Fichas Técnicas</a
                        >
                    </div>
                </div>
            </div>

            <img
                src="https://res.cloudinary.com/dskliu1ig/image/upload/v1769562141/1-4-mortero-grueso_odjo1y.webp"
                alt="Morteros CONKRET"
                class="hero-bg-img"
            />
            <div class="hero-overlay"></div>
        </section>

        <!-- Products Grid -->
        <section id="catalogo" class="section bg-white">
            <div class="container">
                <div class="text-center mb-16">
                    <span
                        class="text-primary font-bold tracking-widest uppercase"
                        >Catálogo Especializado</span
                    >
                    <h2 class="section-title mt-2 font-black">
                        Línea de Morteros
                    </h2>
                    <div
                        class="w-24 h-1.5 bg-primary mx-auto mt-6 rounded-full"
                    >
                    </div>
                </div>

                <div class="grid md:grid-cols-3 gap-8">
                    {
                        mortarProducts.map((product) => (
                            <ProductCard
                                title={product.title}
                                description={product.description}
                                image={product.image}
                                link={product.link}
                            />
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Technical Benefits (Dark Section) -->
        <section
            class="section bg-black text-white relative overflow-hidden"
            style="background-color: #000000;"
        >
            <div
                class="absolute inset-0 opacity-10 pattern-grid pointer-events-none"
            >
            </div>
            <div class="container relative z-10">
                <div class="grid lg:grid-cols-2 gap-16 items-center">
                    <div class="animate-fade-right">
                        <h2
                            class="text-4xl md:text-5xl font-black mb-8 leading-tight"
                        >
                            ¿Por qué usar <br />
                            <span style="color: #e40323;"
                                >Mortero Embolsado?</span
                            >
                        </h2>
                        <p
                            class="text-lg text-slate-300 mb-10 leading-relaxed font-medium"
                        >
                            Olvídate de la variabilidad en la mezcla. Nuestros
                            morteros industriales garantizan la misma adherencia
                            y trabajabilidad en cada m2 de tu muro.
                        </p>

                        <div class="space-y-8">
                            {
                                specs.map((spec) => (
                                    <div class="flex gap-6 group">
                                        <div
                                            class="w-14 h-14 rounded-2xl flex items-center justify-center text-white shrink-0 shadow-lg"
                                            style="background-color: #e40323; box-shadow: 0 10px 20px rgba(228, 3, 35, 0.3);"
                                        >
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="24"
                                                height="24"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="3"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                            >
                                                <polyline points="20 6 9 17 4 12" />
                                            </svg>
                                        </div>
                                        <div>
                                            <h4 class="font-black text-xl mb-1 text-white tracking-tight">
                                                {spec.title}
                                            </h4>
                                            <p class="text-slate-400 text-base leading-snug">
                                                {spec.desc}
                                            </p>
                                        </div>
                                    </div>
                                ))
                            }
                        </div>
                    </div>
                    <div class="relative animate-fade-left">
                        <div
                            class="absolute -inset-10 bg-primary/10 blur-[100px] rounded-full"
                        >
                        </div>
                        <div
                            class="relative rounded-[2.5rem] overflow-hidden border border-white/10 shadow-2xl"
                        >
                            <img
                                src="https://res.cloudinary.com/dskliu1ig/image/upload/v1769562141/1-4-mortero-grueso_odjo1y.webp"
                                alt="Aplicación de Mortero"
                                class="w-full h-full object-cover transition-transform duration-700 hover:scale-110"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Technical Sheets Download -->
        <section id="fichas" class="py-24 bg-white border-t border-slate-100">
            <div class="container max-w-5xl">
                <div
                    class="p-12 md:p-20 text-center relative overflow-hidden flex flex-col items-center"
                >
                    <h2
                        class="text-3xl md:text-4xl font-black mb-6 relative z-10"
                    >
                        Documentación Técnica
                    </h2>
                    <p
                        class="text-lg text-slate-600 mb-10 max-w-2xl mx-auto relative z-10"
                        style="text-align: center !important;"
                    >
                        Descarga las fichas técnicas y hojas de seguridad para
                        incluir en tu dossier de calidad.
                    </p>

                    <div
                        class="flex flex-wrap justify-center gap-4 relative z-10"
                    >
                        <a href="#" class="btn-primary flex items-center gap-3">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="20"
                                height="20"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><path
                                    d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"
                                ></path><polyline points="7 10 12 15 17 10"
                                ></polyline><line x1="12" y1="15" x2="12" y2="3"
                                ></line></svg
                            >
                            Ficha Técnica Morteros
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer />
    <CTAWhatsApp />
</Layout>

<style>
    .category-hero {
        position: relative;
        padding: 8rem 0;
        background-color: #000;
        color: white;
        overflow: hidden;
        min-height: 60vh;
        display: flex;
        align-items: center;
    }

    .hero-bg-img {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.6;
        z-index: 0;
    }

    .hero-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            to right,
            rgba(0, 0, 0, 0.9) 0%,
            rgba(0, 0, 0, 0.4) 100%
        );
        z-index: 1;
    }

    .hero-title {
        font-size: clamp(3rem, 6vw, 5rem);
        font-weight: 900;
        line-height: 1;
        margin-bottom: 1.5rem;
        font-family: "Spline Sans", sans-serif;
    }

    .hero-desc {
        font-size: 1.25rem;
        line-height: 1.6;
        color: #e2e8f0;
        max-width: 600px;
    }

    .section-title {
        font-family: "Spline Sans", sans-serif;
        font-weight: 800;
        font-size: clamp(2rem, 4vw, 3rem);
        color: #1a1a1a;
    }

    .btn-outline {
        border: 2px solid white;
        color: white;
        padding: 1rem 2rem;
        border-radius: 8px;
        font-weight: 700;
        transition: all 0.3s;
        display: inline-block;
    }

    .btn-outline:hover {
        background: white;
        color: var(--color-primary);
    }

    .pattern-grid {
        background-image: radial-gradient(#ffffff 1px, transparent 1px);
        background-size: 30px 30px;
    }
</style>
