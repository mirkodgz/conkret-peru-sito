<style>
    .mega-footer {
        background-color: #ffffff;
        border-top: 1px solid #eee;
        color: var(--color-text);
    }

    /* Features Section */
    .footer-features {
        border-bottom: 1px solid #eee;
        padding: 3rem 0;
    }

    .feature-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 1rem 2rem;
    }

    .feature-item:not(:last-child) {
        border-right: 1px solid #eee;
    }

    .feature-icon {
        width: 56px;
        height: 56px;
        background: #f8f8f8;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        color: var(--color-primary);
    }

    .feature-text h3 {
        font-size: 1.15rem;
        margin-bottom: 0.5rem;
    }

    .feature-text p {
        font-size: 0.9rem;
        color: var(--color-text-light);
        line-height: 1.5;
        margin-bottom: 0;
    }

    /* Main Footer Section */
    .footer-main {
        padding: 6rem 0;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 1.5fr 1fr 1fr 1.2fr;
        gap: 4rem;
    }

    .footer-brand {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .brand-desc {
        color: var(--color-text-light);
        font-size: 1rem;
        line-height: 1.6;
    }

    .footer-social-links {
        display: flex;
        gap: 1.5rem;
    }
    .footer-social-links a {
        color: var(--color-text-light);
        transition: var(--transition-smooth);
    }
    .footer-social-links a:hover {
        color: var(--color-primary);
        transform: translateY(-3px);
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 1rem;
    }

    .contact-item {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        font-size: 0.95rem;
        color: var(--color-text);
    }

    .contact-item svg {
        color: var(--color-primary);
        margin-top: 0.2rem;
    }

    .footer-links-column h3 {
        font-size: 1.1rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 2rem;
        color: var(--color-text);
    }

    .footer-links-column ul {
        list-style: none;
        padding: 0;
    }

    .footer-links-column li {
        margin-bottom: 1rem;
    }

    .footer-links-column a {
        color: var(--color-text-light);
        font-size: 1rem;
        transition: var(--transition-smooth);
    }

    .footer-links-column a:hover {
        color: var(--color-primary);
        padding-left: 5px;
    }

    .footer-cta-col p {
        color: var(--color-text-light);
        margin-bottom: 2rem;
    }

    .whatsapp-footer-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        width: 100%;
        background-color: #111;
        font-weight: 600;
    }

    .whatsapp-footer-btn:hover {
        background-color: #25d366;
    }

    /* Bottom Bar */
    .footer-bottom {
        background-color: #fafafa;
        border-top: 1px solid #eee;
        padding: 2rem 0;
        font-size: 0.9rem;
        color: #888;
    }

    .bottom-flex {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .bottom-links {
        display: flex;
        gap: 2rem;
    }

    .bottom-links a:hover {
        color: var(--color-primary);
    }

    /* Responsive Styling */
    @media (max-width: 1024px) {
        .footer-grid {
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
        }
    }

    @media (max-width: 768px) {
        .feature-item {
            border-right: none !important;
            border-bottom: 1px solid #eee;
            padding: 2rem 0;
        }
        .footer-grid {
            grid-template-columns: 1fr;
            gap: 3rem;
        }
        .bottom-flex {
            flex-direction: column;
            gap: 1.5rem;
            text-align: center;
        }
    }
</style>
