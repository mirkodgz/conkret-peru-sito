---
interface Props {
    title: string;
    description: string;
    image: string;
    link: string;
    specs?: { label: string; value: string }[];
}

const { title, description, image, link, specs = [] } = Astro.props;
---

<div class="product-card">
    <div class="product-image">
        <a href={link} class="block h-full">
            <img src={image} alt={title} loading="lazy" />
        </a>
    </div>
    <div class="product-info">
        <h3>{title}</h3>
        <p>{description}</p>
        {
            specs.length > 0 && (
                <ul class="product-specs">
                    {specs.map((spec) => (
                        <li>
                            <strong>{spec.label}:</strong> {spec.value}
                        </li>
                    ))}
                </ul>
            )
        }
        <div class="product-actions">
            <a href={link} class="btn-secondary">Leer m√°s</a>
            <a
                href={`https://wa.me/51972047903?text=Cotizar%20${title}`}
                class="btn-cotizar-red"
                target="_blank">Cotizar</a
            >
        </div>
    </div>
</div>

<style>
    .product-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        transition:
            transform 0.2s,
            box-shadow 0.2s;
        background: white;
        display: flex;
        flex-direction: column;
    }
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
    .product-image img {
        width: 100%;
        aspect-ratio: 16/9;
        object-fit: cover;
    }
    .product-info {
        padding: 1.5rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }
    .product-info h3 {
        font-size: 1.25rem;
        color: var(--color-primary);
    }
    .product-info p {
        font-size: 1rem;
        margin-bottom: 1rem;
        color: #666;
    }
    .product-specs {
        list-style: none;
        font-size: 1rem;
        margin-bottom: 1.5rem;
    }
    .product-specs li {
        padding: 0.25rem 0;
        border-bottom: 1px solid #eee;
    }
    .product-actions {
        margin-top: auto;
        display: flex;
        gap: 0.5rem;
    }
    .btn-secondary {
        border: 1px solid var(--color-primary);
        color: var(--color-primary);
        padding: 0.5rem 1rem;
        border-radius: 4px;
        font-size: 1rem;
        font-weight: 400;
        flex: 1;
        text-align: center;
        transition: all 0.2s;
    }
    .btn-secondary:hover {
        background-color: var(--color-primary);
        color: white;
    }
    .btn-cotizar-red {
        background-color: var(--color-primary);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        font-size: 1rem;
        font-weight: 700;
        flex: 1;
        text-align: center;
        transition: background-color 0.2s;
    }
    .btn-cotizar-red:hover {
        background-color: var(--color-primary-dark);
        color: white;
    }
</style>
