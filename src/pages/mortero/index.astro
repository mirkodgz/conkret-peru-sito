    <Header />

    <main class="premium-page">
        <!-- Hero Section -->
        <section class="premium-hero">
            <div class="hero-bg-container">
                <img
                    src="https://res.cloudinary.com/dskliu1ig/image/upload/v1769562141/1-4-mortero-grueso_odjo1y.webp"
                    alt="Morteros CONKRET"
                    class="hero-parallax-img"
                    style="opacity: 0.5"
                />
                <div
                    class="hero-vignette"
                    style="background: linear-gradient(90deg, rgba(10,14,20,1) 0%, rgba(10,14,20,0.6) 100%);"
                >
                </div>
            </div>
            <div class="container hero-content-wrapper relative">
                <Breadcrumbs items={breadcrumbItems} />
                <div class="hero-main-text mt-8">
                    <h1 class="display-title">
                        MORTEROS Y <br /><span class="text-primary"
                            >MEZCLAS SECAS</span
                        >
