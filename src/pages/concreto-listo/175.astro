---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import CTAWhatsApp from "../../components/CTAWhatsApp.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import FAQAccordion from "../../components/FAQAccordion.astro";
import "../../styles/global.css";

const productTitle = "Concreto Premezclado f'c 175 kg/cm²";
const productDescription =
    "Concreto diseñado para elementos no estructurales como veredas, sardineles y falsos pisos. Garantiza durabilidad y resistencia al desgaste peatonal.";

const breadcrumbItems = [
    { label: "Productos", href: "/productos/" },
    { label: "Concreto Listo", href: "/concreto-listo/" },
    { label: "f'c 175 kg/cm²" },
];

const faqs = [
    {
        question: "¿Puedo usar concreto 175 para columnas?",
        answer: "No. Según la Norma E.060, el mínimo para elementos estructurales sismorresistentes (columnas, vigas, techos) es 210 kg/cm². El 175 es para pisos y veredas.",
    },
    {
        question: "¿Es bombeable?",
        answer: "Sí, nuestras mezclas de 175 kg/cm² pueden ser bombeadas si el acceso lo requiere, facilitando el vaciado en interiores.",
    },
];

// JSON-LD Product Schema
const productSchema = {
    "@context": "https://schema.org",
    "@type": "Product",
    name: productTitle,
    description: productDescription,
    brand: {
        "@type": "Brand",
        name: "CONKRET",
    },
    offers: {
        "@type": "Offer",
        availability: "https://schema.org/InStock",
        priceCurrency: "PEN",
    },
};
---

<Layout
    title={`${productTitle} | Veredas y Pisos`}
    description={productDescription}
>
    <Header />

    <main class="container">
        <Breadcrumbs items={breadcrumbItems} />

        <section class="section">
            <div class="product-header grid-2 align-center">
                <div class="product-info-text">
                    <h1>{productTitle}</h1>
                    <p class="lead">{productDescription}</p>

                    <div class="specs-mini-grid">
                        <div class="spec-mini">
                            <strong>Resistencia</strong>
                            <span>175 kg/cm²</span>
                        </div>
                        <div class="spec-mini">
                            <strong>Uso</strong>
                            <span>No Estructural</span>
                        </div>
                        <div class="spec-mini">
                            <strong>Agregado</strong>
                            <span>Huso 67 (1/2" - 3/4")</span>
                        </div>
                        <div class="spec-mini">
                            <strong>Fraguar</strong>
                            <span>Normal / Retardado</span>
                        </div>
                    </div>

                    <div class="actions mt-4 flex-gap">
                        <a
                            href="https://wa.me/51972047903?text=Hola%20CONKRET,%20deseo%20cotizar%20Concreto%20175"
                            class="btn-primary">Solicitar Cotización</a
                        >
                    </div>
                </div>
                <div class="product-visual">
                    <img
                        src="https://res.cloudinary.com/dskliu1ig/image/upload/v1769561858/175-concreto_mbfli2.webp"
                        alt={productTitle}
                        class="shadow-lg rounded"
                    />
                </div>
            </div>
        </section>

        <section class="section bg-light">
            <div class="container-small">
                <h2 class="text-center">Aplicaciones Recomendadas</h2>
                <div class="specs-grid mt-4">
                    <div class="card-white p-4">
                        <h3>Ideal para:</h3>
                        <ul class="check-list">
                            <li>Veredas y sardineles.</li>
                            <li>Falsos pisos y contrapisos.</li>
                            <li>Solados para zapatas.</li>
                            <li>Muros de gravedad (no portantes).</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <section class="section">
            <h2 class="text-center">Preguntas Frecuentes</h2>
            <FAQAccordion faqs={faqs} />
        </section>
    </main>

    <script
        type="application/ld+json"
        set:html={JSON.stringify(productSchema)}
    />
    <Footer />
    <CTAWhatsApp />
</Layout>

<style>
    .grid-2 {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
    }
    .align-center {
        align-items: center;
    }
    .lead {
        font-size: 1.25rem;
        color: #444;
        margin-bottom: 2rem;
    }
    .product-visual img {
        width: 100%;
        border-radius: 12px;
    }

    .specs-mini-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
        margin-top: 2rem;
        background: #f9f9f9;
        padding: 1.5rem;
        border-radius: 8px;
    }
    .spec-mini strong {
        display: block;
        font-size: 0.8rem;
        color: #888;
        text-transform: uppercase;
    }
    .spec-mini span {
        font-weight: bold;
        font-size: 1.1rem;
    }

    .mt-4 {
        margin-top: 3rem;
    }
    .p-4 {
        padding: 2rem;
    }
    .flex-gap {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .container-small {
        max-width: 900px;
        margin: 0 auto;
    }
    .card-white {
        background: white;
        border-radius: 12px;
        box-shadow: var(--shadow-sm);
    }

    .check-list {
        list-style: none;
        padding: 0;
    }
    .check-list li {
        margin-bottom: 0.8rem;
        position: relative;
        padding-left: 1.5rem;
    }
    .check-list li::before {
        content: "✓";
        color: var(--color-primary);
        position: absolute;
        left: 0;
        font-weight: bold;
    }

    @media (max-width: 768px) {
        .grid-2 {
            grid-template-columns: 1fr;
        }
        .product-header {
            display: flex;
            flex-direction: column-reverse;
        }
    }
</style>
