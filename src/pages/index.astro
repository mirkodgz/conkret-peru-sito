---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CTAWhatsApp from "../components/CTAWhatsApp.astro";
import ProductCard from "../components/ProductCard.astro";
import ProjectCard from "../components/ProjectCard.astro";
import TestimonialsSection from "../components/TestimonialsSection.astro";
import Preloader from "../components/Preloader.astro";
import FeaturesHome from "../components/FeaturesHome.astro";
import BlogSectionHome from "../components/BlogSectionHome.astro";
import ModernStats from "../components/ModernStats";
import TickerSection from "../components/TickerSection.astro";
import CTAHome from "../components/CTAHome.astro";
import "../styles/global.css";

const faqs = [
	{
		question: "¿Qué tipos de concreto ofrecen?",
		answer: "Ofrecemos concreto premezclado de diversas resistencias, desde f'c 175 kg/cm² hasta f'c 350 kg/cm², adaptados a las necesidades de su proyecto.",
	},
	{
		question: "¿Hacen entregas en todo Lima?",
		answer: "Sí, contamos con una amplia red logística para abastecer proyectos de construcción en todo Lima Metropolitana y alrededores.",
	},
	{
		question: "¿Cuál es la ventaja de usar mezclas secas?",
		answer: "Nuestras mezclas secas reducen la merma en obra, garantizan una dosificación exacta y ahorran tiempo significativo en la preparación.",
	},
];
---

<Layout
	title="CONKRET | Concreto Premezclado y Mezclas Secas Premium en Perú"
	description="Líderes en soluciones de concreto listo y morteros embolsados. Calidad certificada, despacho puntual con GPS y asesoría técnica especializada para tu obra en todo Lima."
>
	<Preloader />
	<Header />

	<main>
		<!-- Hero Section -->
		<section class="hero py-16 bg-light">
			<div class="container grid md:grid-cols-2 gap-16 items-center">
				<div class="hero-text animate-fade-up">
					<h1 class="mb-8 font-black">
						Expertos en Concreto Listo y Soluciones Constructivas en
						Perú
					</h1>
					<p class="mb-12 text-lg opacity-80">
						Optimiza tu obra con el mejor Concreto Premezclado,
						Mortero y Mezclas Secas. Máxima calidad, menor merma y
						mayor rendimiento estructural.
					</p>
					<div class="hero-actions flex gap-6 mt-4">
						<a href="/productos/" class="btn-primary"
							>Ver Productos</a
						>
						<a
							href="https://wa.me/51972047903?text=Hola%20CONKRET,%20deseo%20cotizar"
							class="btn-outline"
							target="_blank"
							rel="noopener noreferrer">Cotizar Ahora</a
						>
					</div>
				</div>
				<div
					class="hero-image relative rounded-3xl overflow-hidden shadow-2xl"
				>
					<img
						src="https://res.cloudinary.com/dskliu1ig/image/upload/v1769562772/conkret-peru-hero_vtmbcr.webp"
						alt="CONKRET en obra - Concreto Premezclado"
						class="w-full h-full object-cover block"
						loading="eager"
					/>
				</div>
			</div>
		</section>

		<!-- Products Section - Replicating WP Layout -->
		<section class="section py-32 bg-white">
			<div class="container">
				<h2
					class="mb-20 text-center font-black text-5xl md:text-6xl text-slate-900"
				>
					Nuestros Productos
				</h2>
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-12">
					<ProductCard
						title="Concreto Listo 175"
						description="Ideal para veredas, falsos pisos y elementos no estructurales."
						image="https://res.cloudinary.com/dskliu1ig/image/upload/v1769561858/175-concreto_mbfli2.webp"
						link="/concreto-listo/175/"
					/>
					<ProductCard
						title="Concreto Listo 210"
						description="Estructural por excelencia para columnas, vigas y losas aligeradas."
						image="https://res.cloudinary.com/dskliu1ig/image/upload/v1769561984/210-concreto_ulncun.webp"
						link="/concreto-listo/210/"
					/>
					<ProductCard
						title="Concretos a Medida"
						description="Diseñamos la resistencia exacta que tu cálculo estructural requiere."
						image="https://res.cloudinary.com/dskliu1ig/image/upload/v1769561918/concreto-a-medida_s7oyof.webp"
						link="/concreto-listo/"
					/>
					<ProductCard
						title="Mortero Fino 1:4"
						description="Mezcla lista para acabados de tarrajeo lisos y de alta calidad."
						image="https://res.cloudinary.com/dskliu1ig/image/upload/v1769561622/Mortero-Fino-DEF_vlhbv2.webp"
						link="/mortero/mortero-fino/"
					/>
					<ProductCard
						title="Mortero Grueso 1:4"
						description="Para asentado de ladrillo y tarrajeos primarios de gran espesor."
						image="https://res.cloudinary.com/dskliu1ig/image/upload/v1769562141/1-4-mortero-grueso_odjo1y.webp"
						link="/mortero/mortero-grueso/"
					/>

					<!-- Special block: NOS ADAPTAMOS -->
					<div
						class="flex flex-col justify-center p-12 text-left rounded-[2rem]"
					>
						<h3
							class="text-primary text-5xl font-black mb-6 leading-tight"
						>
							NOS<br />ADAPTAMOS
						</h3>
						<div class="w-20 h-1 bg-primary mb-8"></div>
						<p
							class="text-slate-600 text-xl font-medium leading-relaxed"
						>
							Formulamos mezclas de acuerdo a lo que tu proyecto
							necesita.
						</p>
					</div>
				</div>
				<div class="mt-12 text-center" style="margin-top: 5rem;">
					<a
						href="/productos/"
						class="btn-primary text-xl px-12 py-4"
					>
						VER TODOS LOS PRODUCTOS
					</a>
				</div>
			</div>
		</section>

		<TickerSection />

		<!-- Premium Features Section -->
		<FeaturesHome />

		<!-- Results / Impact Section -->
		<!-- Modern Results / Impact Section -->
		<ModernStats client:visible />

		<TestimonialsSection />

		<!-- New CTA Section -->
		<CTAHome />

		<BlogSectionHome />
	</main>

	<Footer />
	<CTAWhatsApp />
</Layout>

<style>
	.hero {
		background-color: #eeeeee;
	}
	.btn-outline {
		border: 2px solid var(--color-primary);
		color: var(--color-primary);
		padding: 1rem 2.5rem;
		border-radius: 8px;
		font-weight: 700;
		transition: all 0.2s;
	}
	.btn-outline:hover {
		background-color: var(--color-primary);
		color: white;
	}
	.hero-text h1 {
		color: #1a1a1a;
		line-height: 1.1;
		font-size: 55px;
	}

	@media (max-width: 992px) {
		.hero-text h1 {
			font-size: 35px;
		}
	}
	@media (max-width: 768px) {
		.stat-number {
			font-size: 3.5rem;
		}
		.btn-outline {
			padding: 0.75rem 1.5rem;
		}
		.hero-actions {
			flex-direction: column;
			gap: 1rem;
		}
		.hero-actions .btn-primary,
		.hero-actions .btn-outline {
			width: 100%;
			text-align: center;
			padding: 0.75rem 1.5rem;
		}
	}
</style>
