---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import CTAWhatsApp from "../../components/CTAWhatsApp.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import "../../styles/global.css";

const productTitle = "Concreto Listo 210";
const productDescription =
    "Concreto premezclado de resistencia media, diseñado para estructuras más exigentes. Este producto garantiza una combinación óptima de rendimiento y economía, siendo ideal para proyectos residenciales y comerciales de mediana envergadura.";

const breadcrumbItems = [
    { label: "Productos", href: "/productos/" },
    { label: "Concreto Listo", href: "/concreto-listo/" },
    { label: "f'c 210 kg/cm²" },
];

// JSON-LD Product Schema
const productSchema = {
    "@context": "https://schema.org",
    "@type": "Product",
    name: productTitle,
    description: productDescription,
    brand: {
        "@type": "Brand",
        name: "CONKRET",
    },
    offers: {
        "@type": "Offer",
        availability: "https://schema.org/InStock",
        priceCurrency: "PEN",
    },
};
---

<Layout
    title={`${productTitle} | Columnas y Losas f'c 210`}
    description={productDescription}
>
    <Header />

    <main class="product-page">
        <!-- Modern Product Hero -->
        <section class="section pt-32 pb-20 bg-slate-50">
            <div class="container">
                <Breadcrumbs items={breadcrumbItems} />

                <div
                    class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center mt-12"
                >
                    <div class="product-visual animate-fade-right">
                        <div class="image-wrapper relative group">
                            <div
                                class="absolute inset-0 bg-primary/5 rounded-[2.5rem] transform rotate-3 transition-transform group-hover:rotate-6"
                            >
                            </div>
                            <img
                                src="https://res.cloudinary.com/dskliu1ig/image/upload/v1769561984/210-concreto_ulncun.webp"
                                alt={productTitle}
                                class="relative z-10 w-full rounded-[2.5rem] shadow-2xl border border-white"
                            />
                            <div
                                class="absolute -top-4 -right-4 z-20 bg-primary text-white font-black px-6 py-2 rounded-full shadow-xl rotate-12 uppercase tracking-widest text-sm"
                            >
                                Más Vendido
                            </div>
                        </div>
                    </div>

                    <div class="product-info animate-fade-left">
                        <span
                            class="text-primary font-black uppercase tracking-[0.2em] text-sm block mb-4"
                            >Estructural por Excelencia</span
                        >
                        <h1
                            class="text-5xl md:text-6xl font-black text-slate-900 mb-6 italic uppercase tracking-tighter"
                        >
                            f'c <span class="text-primary">210</span> kg/cm²
                        </h1>
                        <p
                            class="text-lg text-slate-600 leading-relaxed mb-10 font-medium"
                        >
                            {productDescription}
                        </p>

                        <div class="grid grid-cols-2 gap-4 mb-10">
                            {
                                [
                                    { label: "Resistencia", val: "210 kg/cm²" },
                                    { label: "Slump", val: '4" +/- 1"' },
                                    { label: "Agregado", val: '1/2" - 3/4"' },
                                    { label: "Cemento", val: "Tipo I/V HS" },
                                ].map((spec) => (
                                    <div class="bg-white p-5 rounded-2xl border border-slate-100 shadow-sm">
                                        <span class="text-slate-400 text-xs font-bold uppercase tracking-wider block mb-1">
                                            {spec.label}
                                        </span>
                                        <span class="text-slate-900 font-black text-lg">
                                            {spec.val}
                                        </span>
                                    </div>
                                ))
                            }
                        </div>

                        <div class="flex flex-wrap gap-4">
                            <a
                                href="https://wa.me/51972047903?text=Hola%20CONKRET,%20deseo%20cotizar%20Concreto%20210"
                                class="btn-primary"
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                COTIZAR ESTE PRODUCTO
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Technical Details -->
        <section class="section py-24 bg-white">
            <div class="container container-small">
                <div class="grid md:grid-cols-2 gap-12">
                    <div class="technical-block">
                        <h2
                            class="text-3xl font-black mb-8 italic uppercase tracking-tight line-label"
                        >
                            Aplicaciones
                        </h2>
                        <ul class="space-y-4">
                            {
                                [
                                    "Columnas y vigas estructurales.",
                                    "Losas aligeradas y techos.",
                                    "Muros de contención y placas.",
                                    "Cimentaciones reforzadas.",
                                ].map((item) => (
                                    <li class="flex items-start gap-3 text-slate-700 font-medium">
                                        <span class="w-2 h-2 rounded-full bg-primary mt-2 shrink-0" />
                                        {item}
                                    </li>
                                ))
                            }
                        </ul>
                    </div>

                    <div class="technical-block">
                        <h2
                            class="text-3xl font-black mb-8 italic uppercase tracking-tight line-label"
                        >
                            ¿Por qué 210?
                        </h2>
                        <div
                            class="bg-slate-950 p-8 rounded-[2.5rem] border border-slate-800 shadow-xl relative overflow-hidden group"
                        >
                            <div
                                class="absolute inset-0 bg-primary/10 opacity-0 group-hover:opacity-100 transition-opacity"
                            >
                            </div>
                            <p
                                class="text-slate-300 mb-0 font-medium relative z-10"
                            >
                                Es el estándar exigido por el RNE para elementos
                                estructurales en zonas sísmicas. Garantiza que
                                tu edificación soporte cargas vivas y muertas
                                con total seguridad.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script
        type="application/ld+json"
        set:html={JSON.stringify(productSchema)}
    />
    <Footer />
    <CTAWhatsApp />
</Layout>

<style>
    .product-page {
        font-family: "Spline Sans", sans-serif;
    }

    .line-label {
        position: relative;
        padding-bottom: 1rem;
    }
    .line-label::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 60px;
        height: 4px;
        background: var(--color-primary);
        border-radius: 2px;
    }

    .container-small {
        max-width: 1100px;
    }

    /* Padding fix for fixed header */
    @media (max-width: 768px) {
        .pt-32 {
            padding-top: 8rem !important;
        }
    }
</style>
