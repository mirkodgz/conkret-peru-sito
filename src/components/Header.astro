<style>
    .header {
        padding: 1.25rem 0;
        border-bottom: 4px solid var(--color-primary);
        position: sticky;
        top: 0;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        z-index: 100;
        box-shadow: var(--shadow-sm);
    }
    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .logo img {
        height: 45px;
        width: auto;
        transition: var(--transition-smooth);
    }
    .logo:hover img {
        transform: scale(1.05);
    }
    .nav ul {
        display: flex;
        list-style: none;
        gap: 2.5rem;
    }
    .nav a {
        font-weight: 400;
        font-size: 0.95rem;
        color: var(--color-text);
        position: relative;
        padding: 0.5rem 0;
        transition: var(--transition-smooth);
        text-transform: uppercase;
    }
    .nav a::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--color-primary);
        transition: var(--transition-smooth);
    }
    .nav a:hover {
        color: var(--color-primary);
    }
    .nav a:hover::after {
        width: 100%;
    }
    .btn-whatsapp {
        background-color: #25d366;
        color: white;
        padding: 0.6rem 1.25rem;
        border-radius: 50px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 400;
        transition: var(--transition-smooth);
        box-shadow: var(--shadow-sm);
    }
    .btn-whatsapp:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    @media (max-width: 992px) {
        .nav {
            display: none;
        }
    }
</style>
